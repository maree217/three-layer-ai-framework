# Three-Layer AI Framework Configuration
# Copy this file to .env and update with your credentials

# =================================
# Azure AI Foundry Configuration
# =================================
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_AI_WORKSPACE=your-workspace-name
AZURE_TENANT_ID=your-tenant-id

# =================================
# Azure OpenAI Configuration
# =================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# =================================
# Alternative OpenAI Configuration
# =================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-org-id

# =================================
# Vector Database Configuration
# =================================
# ChromaDB (Local)
CHROMA_DB_PATH=./data/chroma_db

# Azure AI Search (Production)
AZURE_SEARCH_ENDPOINT=https://your-search.search.windows.net
AZURE_SEARCH_KEY=your-search-key
AZURE_SEARCH_INDEX_NAME=enterprise-knowledge

# =================================
# Neo4j Configuration (Optional)
# =================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# =================================
# Application Configuration
# =================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# =================================
# Security Configuration
# =================================
# JWT Secret for API authentication
JWT_SECRET=your-jwt-secret-key

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key

# =================================
# Business Configuration
# =================================
# Your organization details
ORGANIZATION_NAME=Your Company Name
ORGANIZATION_DOMAIN=your-domain.com

# Default forecast parameters
DEFAULT_FORECAST_HORIZON=12
DEFAULT_CONFIDENCE_LEVEL=0.85

# =================================
# Monitoring & Observability
# =================================
# Application Insights
APPINSIGHTS_CONNECTION_STRING=your-app-insights-connection

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =================================
# Data Sources Configuration
# =================================
# Database connections
DATABASE_URL=postgresql://user:password@localhost:5432/your-db

# External APIs
EXTERNAL_API_KEY=your-external-api-key
EXTERNAL_API_ENDPOINT=https://api.external-service.com

# =================================
# Layer-Specific Configuration
# =================================

# Layer 1: UX Automation
RAG_MAX_CONTEXT_LENGTH=4000
RAG_SIMILARITY_THRESHOLD=0.75
COPILOT_PLUGIN_ENDPOINT=https://your-copilot-plugin.com

# Layer 2: Data Intelligence  
KNOWLEDGE_GRAPH_MAX_ENTITIES=10000
PROCESS_MINING_BATCH_SIZE=1000
ETL_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Layer 3: Strategic Intelligence
FORECAST_UPDATE_FREQUENCY=weekly
SCENARIO_COUNT=5
EXECUTIVE_REPORT_SCHEDULE=monthly